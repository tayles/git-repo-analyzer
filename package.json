{
  "name": "git-repo-analyzer",
  "private": true,
  "packageManager": "bun@1.3.9",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "oxfmt --write .",
    "format:check": "oxfmt --check .",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "oxfmt": "^0.7.0",
    "oxlint": "^1.0.0",
    "turbo": "^2.4.0",
    "typescript": "^5.7.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
