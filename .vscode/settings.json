{
  "files.trimFinalNewlines": false,
  "files.insertFinalNewline": true,
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",

  // oxlint
  "editor.defaultFormatter": "oxc.oxc-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.oxc": "always"
  },
  "oxc.typeAware": true,

  // tailwindcss
  "files.associations": {
    "*.css": "tailwindcss"
  }
}
